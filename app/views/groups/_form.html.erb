<%= form_for @group do |f| %>
<% if @group.error.any? %>
<ul>
  <% @group.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

Topic
<%= f.text_field :title %>
<br>
Description
<%= f.text_area :description %>
<br>

<%= f.submit "Submit", :disable_with => 'Submiting...'%>
<% end %>
